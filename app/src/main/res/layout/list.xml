<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_background"
    android:background="@color/light_blue">

            <TextView
                android:id="@+id/list_type_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="120dp"
                android:paddingTop="40dp"/>
            <TextView
                android:id="@+id/list_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text="LinbVersion News Demo"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/list_type_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:text="状态"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="● ● ● ● ●"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/list_operation_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="250dp"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/list_operation_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:text="debug information"
                android:paddingBottom="25dp"/>

</LinearLayout>